<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".UpiPinFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/intersemibold"
        android:text="@string/enter_upi_pin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_marginTop="150dp"/>

    <LinearLayout
        android:id="@+id/get_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"

        >

        <EditText
            android:id="@+id/pin1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/interregular"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="30sp"
            android:imeOptions="actionNext"
            android:layout_marginStart="30dp"/>

        <EditText
            android:id="@+id/pin2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/interregular"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="30sp"
            android:nextFocusForward="@id/otpCode3"/>

        <EditText
            android:id="@+id/otpCode3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/interregular"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="30sp"
            android:nextFocusRight="@id/otpCode4"/>

        <EditText
            android:id="@+id/otpCode4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/interregular"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/otpCode5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/interregular"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/otpCode6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/interregular"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:inputType="numberPassword"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="30sp"
            android:layout_marginEnd="30dp"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/proceedBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_pin"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/red_button"
        android:fontFamily="@font/intersemibold"
        android:gravity="center"
        android:text="@string/proceed"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:cornerRadius="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>