<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccountSettingsFragment"
    android:background="@color/black">

    <TextView
        android:id="@+id/tv_registered_mob_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registered Mobile no."
        android:textColor="#A2A2A2"
        android:textSize="15sp"
        android:fontFamily="@font/interregular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_mobile_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/et_rectangle_mobile_num"
        app:layout_constraintTop_toBottomOf="@+id/tv_registered_mob_num"
        app:layout_constraintBottom_toBottomOf="@+id/et_rectangle_mobile_num"
        android:textSize="20sp"
        android:text="9836524424"
        android:fontFamily="@font/interregular"
        android:textColor="#A2A2A2" />

    <ImageView
        android:id="@+id/et_rectangle_mobile_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@+id/tv_registered_mob_num"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"/>

   <TextView
       android:id="@+id/tv_upi"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="UPI"
       android:textColor="#A2A2A2"
       android:textSize="15sp"
       android:fontFamily="@font/interregular"
       app:layout_constraintTop_toBottomOf="@+id/et_rectangle_mobile_num"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginTop="20dp"
       android:layout_marginStart="20dp"
       />
    <TextView
        android:id="@+id/tv_upi_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_upi"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rectangle_upi"
        app:layout_constraintStart_toStartOf="@+id/tv_rectangle_upi"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:text="XXXXXXXXXX@apl"
        android:fontFamily="@font/interregular"
        android:textColor="#A2A2A2" />

    <ImageView
        android:id="@+id/tv_rectangle_upi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@+id/tv_upi"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_bank_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank Account"
        android:textColor="#A2A2A2"
        android:textSize="15sp"
        android:fontFamily="@font/interregular"
        app:layout_constraintTop_toBottomOf="@+id/tv_upi_number"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        />
    <EditText
        android:id="@+id/et_bank_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_bank_account"
        app:layout_constraintBottom_toBottomOf="@+id/et_rectangle_bank_account"
        android:textSize="20sp"
        android:background="@null"
        android:fontFamily="@font/intersemibold"
        android:textColor="#A2A2A2" />

    <ImageView
        android:id="@+id/et_rectangle_bank_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/rectangle"
        app:layout_constraintTop_toBottomOf="@+id/tv_bank_account"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/edit_button"
        app:layout_constraintEnd_toEndOf="@+id/et_rectangle_bank_account"
        app:layout_constraintTop_toTopOf="@+id/et_rectangle_bank_account"
        app:layout_constraintBottom_toBottomOf="@+id/et_rectangle_bank_account"
        android:layout_marginEnd="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>