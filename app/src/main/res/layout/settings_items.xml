<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/settings_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/account_settings_icon"
            app:layout_constraintTop_toTopOf="@+id/settings_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/settings_desc"
            />
        <TextView
            android:id="@+id/settings_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Account Settings"
            android:fontFamily="@font/interregular"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/settings_logo"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/settings_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:text="Modify bank account, view profile\ninformation"
            android:fontFamily="@font/interregular"
            android:textColor="#8B8B8B"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/settings_logo"
            app:layout_constraintTop_toBottomOf="@+id/settings_name"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_right"
            app:layout_constraintStart_toEndOf="@id/settings_desc"
            android:layout_marginStart="70dp"
            app:layout_constraintTop_toTopOf="@+id/settings_desc"
            app:layout_constraintBottom_toBottomOf="@+id/settings_desc"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>